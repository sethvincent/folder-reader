{
  "name": "folder-reader",
  "version": "1.0.1",
  "description": "recursively stream a directory of files",
  "main": "index.js",
  "scripts": {
    "deps": "dependency-check . && dependency-check . --unused --no-dev && ncu",
    "docs:api": "documentation build index.js -f md -o docs/API.md",
    "docs:build": "npm run docs:api",
    "lint": "standard",
    "test:no-lint": "node tests/*.js | tap-spec",
    "test": "npm run lint && npm run test:no-lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sethvincent/folder-reader.git"
  },
  "keywords": [
    "stream",
    "walk",
    "dir",
    "folder",
    "directory",
    "fs"
  ],
  "author": "sethvincent",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sethvincent/folder-reader/issues"
  },
  "homepage": "https://github.com/sethvincent/folder-reader#readme",
  "dependencies": {
    "folder-walker": "^3.1.0",
    "isarray": "^2.0.1",
    "micromatch": "^3.0.3",
    "pump": "^1.0.2",
    "through2": "^2.0.3"
  },
  "devDependencies": {
    "documentation": "^4.0.0-rc.1",
    "hyperdrive": "^9.4.0",
    "mirror-folder": "^2.1.1",
    "obj-keypath": "^1.1.0",
    "standard": "^10.0.2",
    "tap-spec": "^4.1.1",
    "tape": "^4.6.3"
  }
}
